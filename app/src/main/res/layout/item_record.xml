<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    style="@style/CardViewStyle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 流量指示器 -->
        <View
            android:id="@+id/view_flow_indicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/flow_normal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 开始日期 -->
        <TextView
            android:id="@+id/text_view_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2024年01月15日"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_flow_indicator"
            app:layout_constraintEnd_toStartOf="@id/text_view_days_ago" />

        <!-- 距离天数 -->
        <TextView
            android:id="@+id/text_view_days_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3天前"
            android:textSize="12sp"
            android:textColor="@color/secondary_text"
            app:layout_constraintTop_toTopOf="@id/text_view_start_date"
            app:layout_constraintEnd_toStartOf="@id/button_delete" />

        <!-- 删除按钮 -->
        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete_24"
            android:contentDescription="@string/btn_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 结束日期 -->
        <TextView
            android:id="@+id/text_view_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至 01月20日"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_start_date"
            app:layout_constraintStart_toEndOf="@id/view_flow_indicator" />

        <!-- 经期长度 -->
        <TextView
            android:id="@+id/text_view_period_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5天"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/text_view_end_date"
            app:layout_constraintStart_toEndOf="@id/text_view_end_date" />

        <!-- 流量等级 -->
        <LinearLayout
            android:id="@+id/layout_flow_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_end_date"
            app:layout_constraintStart_toEndOf="@id/view_flow_indicator">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/list_flow_label"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/text_view_flow_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:textSize="12sp"
                android:textColor="@color/primary_text" />

        </LinearLayout>

        <!-- 症状标签 -->
        <TextView
            android:id="@+id/label_symptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_symptoms_label"
            android:textSize="12sp"
            android:textColor="@color/secondary_text"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/layout_flow_info"
            app:layout_constraintStart_toEndOf="@id/view_flow_indicator" />

        <TextView
            android:id="@+id/text_view_symptoms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="痛经、头痛"
            android:textSize="12sp"
            android:textColor="@color/primary_text"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/label_symptoms"
            app:layout_constraintStart_toEndOf="@id/label_symptoms"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 备注标签 -->
        <TextView
            android:id="@+id/label_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_notes_label"
            android:textSize="12sp"
            android:textColor="@color/secondary_text"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/label_symptoms"
            app:layout_constraintStart_toEndOf="@id/view_flow_indicator" />

        <TextView
            android:id="@+id/text_view_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="今天感觉不太舒服"
            android:textSize="12sp"
            android:textColor="@color/primary_text"
            android:layout_marginStart="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/label_notes"
            app:layout_constraintStart_toEndOf="@id/label_notes"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>